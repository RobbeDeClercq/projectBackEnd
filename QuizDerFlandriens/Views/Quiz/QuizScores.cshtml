@model IEnumerable<QuizDerFlandriens.Models.Result>

@{
    ViewData["Title"] = "QuizScores";
}

<h1>Scores of @ViewData["QuizName"]</h1>
<a class="btn btn-primary" asp-action="Quizzes">Back to homepage</a>
<br />&nbsp;<br />
<table class="table table-hover">
    <tbody>
@{ 
    int counter = 1;
}
@foreach (var item in Model) {
        <tr>
            <th scope="row">
                @counter. 
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.Name)
            </td>
        </tr>
    counter++;
}
    </tbody>
</table>
