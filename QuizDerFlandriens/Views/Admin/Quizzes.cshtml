@model IEnumerable<QuizDerFlandriens.Models.Quiz>

@{
    ViewData["Title"] = "Quizzes";
}

<h1>Quizzes</h1>

<p>
    <a asp-action="CreateQuiz">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Difficulty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Difficulty.Description)
            </td>
            <td>
                <a asp-action="EditQuiz" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="QuizQuestions" asp-route-id="@item.Id">Questions</a> |
                <a asp-action="DeleteQuiz" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
