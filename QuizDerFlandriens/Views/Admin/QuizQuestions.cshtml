@model IEnumerable<QuizDerFlandriens.Models.Question>

@{
    ViewData["Title"] = "QuizQuestions";
}

<h1>QuizQuestions</h1>

<p>
    <a asp-action="CreateQuestion" asp-route-id="@ViewData["QuizId"]">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quiz)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quiz.Subject)
            </td>
            <td>
                <a asp-action="EditQuestion" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="QuestionAnswers" asp-route-id="@item.Id" asp-route-QuizId="@ViewData["QuizId"]">Answers</a> |
                <a asp-action="DeleteQuestion" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-action="Quizzes">Back to Quizzes</a>
