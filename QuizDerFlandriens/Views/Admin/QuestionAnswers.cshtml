@model IEnumerable<QuizDerFlandriens.Models.Answer>

@{
    ViewData["Title"] = "QuestionAnswers";
}

<h1>Answers of @ViewData["QuestionName"]</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FotoURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correct)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @{
                    if (item.Description != null)
                    {
                        @Html.DisplayFor(modelItem => item.Description)
                    }
                    else
                    {
                        <span>No Description</span>
                    }

                }
            </td>
            <td>
                @{
                    if (item.FotoURL != null)
                    {
                        var photoPath = "~/images/" + item.FotoURL;
                        <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }

                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correct)
            </td>
            <td>
                <a asp-action="EditAnswer" asp-route-id="@item.Id" asp-route-QuizId="@ViewData["QuizId"]" asp-route-FotoURL="@item.FotoURL">Edit</a> |
                <a asp-action="DeleteAnswer" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-action="QuizQuestions" asp-route-id="@ViewData["QuizId"]">Back to Questions</a>