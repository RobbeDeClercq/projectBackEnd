@model QuizDerFlandriens.ViewModels.AnswerCreateViewModel

@{
    ViewData["Title"] = "CreateAnswer";
}

<h1>CreateAnswer</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="CreateAnswer" asp-route-id="@ViewData["QuestionId"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" id="des" class="form-control" onchange="answerDiscrptionOnchange()" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Foto" id="fileinput" class="form-control custom-file-input" onchange="answerFileOnchange()" />
                    <label class="custom-file-label">Choose Photo...</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Correct" class="control-label"></label>
                <select asp-for="Correct" class="form-control">
                    <option value="1">True</option>
                    <option value="0">False</option>
                </select>
                <span asp-validation-for="Correct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionId" class="control-label"></label>
                <input asp-for="QuestionId" disabled class ="form-control" value="@ViewData["QuestionId"]" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add Answer" class="btn btn-primary" />
                @if (int.Parse(ViewData["answersCount"].ToString()) >= 2)
                {
                    <a asp-action="QuizQuestions" asp-route-id="@ViewData["QuizId"]">Done</a>
                }
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}
