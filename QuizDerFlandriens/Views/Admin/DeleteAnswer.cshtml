@model QuizDerFlandriens.Models.Answer

@{
    ViewData["Title"] = "DeleteAnswer";
}

<h1>Delete Answer</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Answer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FotoURL)
        </dt>
        <dd class = "col-sm-10">
            @{ 
                if(ViewData["FotoURL"].ToString() != "False")
                {
                    var photoPath = "~/images/" + ViewData["FotoURL"];
                    <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                }
                else
                {
                    @Html.Raw("No Image");
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correct)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correct)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Question)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Question.Id)
        </dd class>
    </dl>
    
    <form asp-action="DeleteAnswer" asp-route-QuestionId="@ViewData["QuestionId"]" asp-route-QuizId="@ViewData["QuizId"]">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="QuestionAnswers" asp-route-id="@ViewData["QuestionId"]" asp-route-QuizId="@ViewData["QuizId"]">Back to List</a>
    </form>
</div>
