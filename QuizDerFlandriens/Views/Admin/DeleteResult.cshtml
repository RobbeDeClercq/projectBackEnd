@model QuizDerFlandriens.Models.Result

@{
    ViewData["Title"] = "DeleteResult";
}

<h1>Delete Result</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Result</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.UserName)
        </dd>
    </dl>
    
    <form asp-action="DeleteResult" asp-route-QuizId="@ViewData["QuizId"]" asp-route-quizName="@ViewData["QuizName"]">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-primary" asp-action="QuizResults" asp-route-QuizId="@ViewData["QuizId"]" asp-route-quizName="@ViewData["QuizName"]">Back to List</a>
    </form>
</div>
