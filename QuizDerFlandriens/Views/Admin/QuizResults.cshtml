@model IEnumerable<QuizDerFlandriens.Models.Result>

@{
    ViewData["Title"] = "QuizResults";
}

<h1>Results of @ViewData["QuizName"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                Username
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <th>
                    <span class="text-warning">There are no results in this Quiz yet....</span> 
                </th>
            </tr>
        }
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @item.Person.UserName
            </td>
            <td>
                <a class="btn btn-danger" asp-action="DeleteResult" asp-route-id="@item.Id" asp-route-QuizId="@item.QuizId" asp-route-quizName="@ViewData["QuizName"]">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Quizzes">Back to Quizzes</a>
