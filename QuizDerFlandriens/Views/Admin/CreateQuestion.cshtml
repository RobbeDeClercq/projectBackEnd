@model QuizDerFlandriens.Models.Question

@{
    ViewData["Title"] = "CreateQuestion";
}

<h1>Create Question</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateQuestion" asp-route-id="@ViewData["QuizId"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" required class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuizId" class="control-label">Quiz</label>
                <input asp-for="QuizId" type="hidden" class="form-control" value="@ViewData["QuizId"]">
                <input readonly value="@ViewData["QuizName"]" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a class="btn btn-primary" asp-action="QuizQuestions" asp-route-id="@ViewData["QuizId"]">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
